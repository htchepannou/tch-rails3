<h1>Sign In</h1>
<p>&nbsp;</p>
<form class="form-horizontal" action="$request.contextPath/login/signin" method="post">
    <input type="hidden" name="redirect" value="$!redirect" />
    
    <fieldset>
        <div class="control-group">
            <input name="uname"    value="$!uname" placeholder="Username" required="required" />
            <input name="password" value=""        placeholder="Password" required="required" type="password" />

            <button class="btn btn-primary" type="submit">Sign In</button>
        </div>
        <p class="help-block">
            To login, use <code>admin/admin</code> as username/password.
        </p>
    </fieldset>
</form>

